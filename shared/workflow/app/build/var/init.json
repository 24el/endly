[
  {
    "Name": "app",
    "From": "params.app",
    "Required": true
  },
  {
    "Name": "origin",
    "Required": true,
    "From": "params.origin"
  },
  {
    "Name": "replace",
    "Required": true,
    "From": "params.replace",
    "Value": {}
  },
  {
    "Name": "expand",
    "Required": true,
    "From": "params.expand",
    "Value": true
  },
  {
    "Name": "upload",
    "Required": true,
    "From": "params.upload",
    "Value": []
  },
  {
    "Name": "download",
    "Value": [],
    "From": "params.download",
    "Required": true
  },
  {
    "Name": "init",
    "Value": [
      "if [ -e $buildPath ]; then rm -rf $buildPath; fi",
      "mkdir -p $buildPath",
      "chmod +x $buildPath",
      "chown $os.user  $buildPath"
    ],
    "From": "params.init",
    "Required": true
  },
  {
    "Name": "superUser",
    "Required": true,
    "Params": "params.superUser",
    "Value": false
  },
  {
    "Name": "commands",
    "Required": true,
    "From": "params.commands"
  },
  {
    "Name": "buildPath",
    "Required": true,
    "From": "params.buildPath",
    "Value": "/tmp/${app}/build/"
  },
  {
    "Name": "releasePath",
    "Required": true,
    "From": "params.releasePath",
    "Value": "/tmp/${app}/release/"
  },
  {
    "Name": "target",
    "From": "params.target",
    "Value": {
      "URL": "ssh://127.0.0.1/",
      "Credentials": "localhost"
    }
  },
  {
    "Name": "buildTarget",
    "Required": true,
    "Value": "$target"
  },
  {
    "Name": "buildTarget",
    "Value": {
      "URL": "$URLJoin([\"$buildTarget.URL\",\"$buildPath\"])",
      "Credentials": "$buildTarget.Credentials"
    }
  },
  {
    "Name": "secrets",
    "From": "params.secrets",
    "Required": true,
    "Value": {}
  }
]