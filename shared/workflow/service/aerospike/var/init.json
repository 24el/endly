[
  {
    "Name": "name",
    "From": "params.name"
  },
  {
    "Name": "name",
    "When": "$in.params.name:/$/",
    "Value": "aerospike_endly"
  },
  {
    "Name": "target",
    "From": "params.target"
  },
  {
    "Name": "target",
    "When": "$in.params.target:/$/",
    "Value": {
      "URL": "ssh://127.0.0.1/",
      "Credentials": "localhost"
    }
  },
  {
    "Name": "env",
    "From": "params.env"
  },
  {
    "Name": "env",
    "When": "$in.params.env:!/$/ && $in.params.env",
    "Value": {}
  },
  {
    "Name": "serviceTarget",
    "From": "params.serviceTarget"
  },
  {
    "Name": "serviceTarget",
    "When": "$in.params.serviceTarget:/$/",
    "Value": "$target"
  },

  {
    "Name": "version",
    "From": "params.version"
  },
  {
    "Name": "version",
    "When": "$in.params.version:/$/",
    "Value": "latest"
  },

  {
    "Name": "image",
    "From": "params.image"
  },
  {
    "Name": "image",
    "When": "$in.params.image:/$/",
    "Value": "aerospike/aerospike-server:$version"
  },
  {
    "Name": "config",
    "From": "params.config"
  },
  {
    "Name": "hasConfig",
    "When": "$out.config:!/$/ && $out.config",
    "Value": "1",
    "Else": "0"
  },
  {
    "Name": "serviceConfig",
    "Value": "/tmp/${name}.conf"
  }
]