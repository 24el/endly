{
  "Name": "go",
  "Versioning": "MajorVersion.MinorVersion.ReleaseVersion",
  "Targets": [
    {
      "MinReleaseVersion": {
        "1.13": "2",
        "1.12": "7",
        "1.11": "5",
        "1.10": "5",
        "1.9": "4",
        "1.8": "5"
      },
      "Deployment": {
        "Pre": {
          "AutoSudo": true,
          "Commands": [
            "mkdir -p ${deploy.baseLocation}",
            "chmod a+rw ${deploy.baseLocation}"
          ]
        },
        "Transfer": {
          "Source": {
            "URL": "https://dl.google.com/go/go${artifact.Version}.${os.System}-${os.Architecture}.tar.gz"
          },
          "Dest": {
            "URL": "scp://${deploy.target.host}${deploy.baseLocation}go_${artifact.Version}.tar.gz",
            "Credentials": "${deploy.target.credentials}"
          }
        },
        "VersionCheck": {
          "SystemPaths": [
            "${deploy.baseLocation}go/bin"
          ],
          "Commands": [
            {
              "Command": "go version",
              "Extract": [
                {
                  "Key": "Version",
                  "RegExpr": "go(\\d+\\.\\d+)"
                }
              ]
            }
          ]
        },
        "Run": {
          "Directory": "/opt/sdk",
          "TimeoutMs": 120000,
          "Commands": [
            {
              "Command": "/bin/bash -c '[[ -e ${deploy.baseLocation}go ]] && rm -rf ${deploy.baseLocation}go'"
            },
            {
              "Command": "tar xvzf go_${artifact.Version}.tar.gz",
              "Error": [
                "Error"
              ]
            }
          ]
        }
      }
    }
  ],
  "BaseLocation": "/usr/local"
}