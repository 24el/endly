{
  "Name": "go",
  "Versioning": "MajorVersion.MinorVersion.ReleaseVersion",
  "Targets": [
    {
      "MinReleaseVersion": {
        "1.11": "5",
        "1.10": "5",
        "1.9": "4",
        "1.8": "5",
        "1.2": "2"
      },
      "Deployment": {
        "Pre": {
          "SuperUser": true,
          "Commands": [
            "mkdir -p /opt/sdk/",
            "chmod a+rw /opt/sdk/"
          ]
        },
        "Transfer": {
          "Source": {
            "URL": "https://redirector.gvt1.com/edgedl/go/go${artifact.Version}.${os.System}-${os.Architecture}.tar.gz"
          },
          "Dest": {
            "URL": "scp://${buildHost}/opt/sdk/go_${artifact.Version}.tar.gz",
            "Credentials": "${buildHostCredentials}"
          }
        },
        "VersionCheck": {
          "SystemPaths": [
            "/opt/sdk/go/bin"
          ],
          "Commands": [
            {
              "Command": "go version",
              "Extract": [
                {
                  "Key": "Version",
                  "RegExpr": "go(\\d\\.\\d)"
                }
              ]
            }
          ]
        },
        "Run": {
          "Directory": "/opt/sdk",
          "TimeoutMs": 120000,
          "Commands": [
            {
              "Command": "/bin/bash -c '[[ -e /opt/sdk/go ]] && rm -rf /opt/sdk/go'"
            },
            {
              "Command": "tar xvzf go_${artifact.Version}.tar.gz",
              "Error": [
                "Error"
              ]
            }
          ]
        }
      }
    }
  ]
}