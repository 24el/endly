[
  {
    "Name": "serviceInstanceName",
    "Value": "$params.serviceInstanceName"
  },

  {
    "Name": "mysqlCredential",
    "Value": "$params.mysqlCredential"
  },



  {
    "Name": "dockerTarget",
    "Value": {
      "Name": "$params.serviceInstanceName",
      "URL": "$params.url",
      "Credential": "$params.credential"
    }
  },
  {
    "Name": "sourceConfig",
    "Value": {
      "URL": "$params.configUrl",
      "Credential": "$params.configUrlCredential"
    }
  },

  {
    "Name": "serviceInstanceName",
    "Value": "$params.serviceInstanceName"
  },
  {
    "Name": "configFile",
    "Value": "/tmp/my${serviceInstanceName}.cnf"
  },




  {
    "Name": "systemDockerRequest",
    "Value": {
      "Service": "docker",
      "Target": "$dockerTarget"
    }
  },

  {
    "Name": "dockerRequest",
    "Value": {
      "SysPath": [
        "/usr/local/bin"
      ],
      "Target": "$dockerTarget"
    }
  },
  {
    "Name": "systemMysqlRequest",
    "Value": {
      "Service": "mysql",
      "Target": "$dockerTarget"
    }
  },
  {
    "Name": "transferRequest",
    "Value": {
      "Transfers": [
        {
          "Source": "$sourceConfig",
          "Target": {
            "URL": "file://$configFile"
          },
          "Expand": true
        }
      ]
    }
  },
  {
    "Name": "dockerRunRequest",
   
    "Value": {
    	"Env": {
     	 "MYSQL_ROOT_PASSWORD": "****"
    	},
      "SysPath": [
        "/usr/local/bin"
      ],
      "Target": "$dockerTarget",
      "Credential": "$mysqlCredential",
      "Image": "mysql:5.6",
      "Mount": {
        "$configFile": "/etc/my.cnf"
      },
      "MappedPort": {
        "3306": "3306"
      }
    }
  }
]