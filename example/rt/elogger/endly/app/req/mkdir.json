{
  "SuperUser":true,
  "Target":{
    "URL": "ssh://$targetHost",
    "Credentials": "$targetHostCredential"
  },
  "Commands":[
    "/bin/bash -c '[[ -e ${appDirectory}/conf ]] && rm -rf ${appDirectory}/conf/*'",
    "mkdir -p $appDirectory/conf",
    "mkdir -p $appDirectory/logs",
    "chmod -R a+w $appDirectory"
  ]
}